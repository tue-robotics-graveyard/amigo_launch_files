<launch>
    <include file="$(find amigo_machine_files)/machines/amigo1.machine" />
    <include file="$(find amigo_machine_files)/machines/amigo2.machine" />
    <include file="$(find amigo_machine_files)/machines/amigo3.machine" />
    
    <node name="amigo_arms" pkg="ocl" type="deployer-gnulinux" args="
    -s $(find amigo_etherCAT)/hardware_ROStopics.ops 
    -s $(find amigo_pera_controller_dev)/lpera_ROStopics.ops 
    -s $(find amigo_pera_controller_dev)/lpera.ops 
    --" output="screen" machine="amigo2"></node>   
    <node name="amigo_arms" pkg="ocl" type="deployer-gnulinux" args="
    -s $(find amigo_etherCAT)/hardware_ROStopics.ops 
    -s $(find amigo_pera_controller_dev)/rpera_ROStopics.ops 
    -s $(find amigo_pera_controller_dev)/rpera.ops 
    --" output="screen" machine="amigo3"></node>   
</launch>
