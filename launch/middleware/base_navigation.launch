<?xml version="1.0"?>

<launch>

    <include file="$(find amigo_machine_files)/machines/amigo1.machine" />
    <include file="$(find amigo_machine_files)/machines/amigo2.machine" />
    <include file="$(find amigo_machine_files)/machines/amigo3.machine" />
    <include file="$(find amigo_machine_files)/machines/amigo4.machine" />
    <include file="$(find amigo_machine_files)/machines/localhost.machine" />

    <arg if="$(optenv ROBOT_REAL false)" name="machine" value="amigo4"/>
    <arg unless="$(optenv ROBOT_REAL false)" name="machine" value="localhost"/>  

    <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen" machine="$(arg machine)">
        <!-- local and global planner parameters -->        
        <rosparam file="$(find amigo_launch_files)/parameters/move_base.yaml" command="load" />

        <!-- Common costmap parameters -->        
        <rosparam file="$(find amigo_launch_files)/parameters/costmap_common_params.yaml" command="load" ns="global_costmap" />
        <rosparam file="$(find amigo_launch_files)/parameters/costmap_common_params.yaml" command="load" ns="local_costmap" />

        <!-- Global costmap settings -->
        <rosparam file="$(find amigo_launch_files)/parameters/costmap_global_params.yaml" command="load" />

        <!-- Local costmap settings -->
        <rosparam file="$(find amigo_launch_files)/parameters/costmap_local_params.yaml" command="load" />

        <!-- IF IN SIMULATION, NEED TO DO REMAP -->
        <remap from="/cmd_vel" to="/base_controller/cmd_vel" unless="$(optenv ROBOT_REAL false)"/>
        
    </node>

</launch>
